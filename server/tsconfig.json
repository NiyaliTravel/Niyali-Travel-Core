{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "../dist/server",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "jsx": "react-jsx",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@shared/*": ["../shared/*"]
    }
  },
  "include": [
    "index.ts",
    "routes.ts",
    "controllers/admin/atolls.ts",
    "controllers/seed/seedAdmin.ts",
    "controllers/seed/seedGuestHouses.ts",
    "controllers/seed/seedIslands.ts",
    "controllers/seed/seedNewGuestHouses.ts",
    "middleware/auth.ts",
    "middleware/middleware.ts",
    "models/db.ts",
    "routes/adminRoutes.ts",
    "routes/routes.ts",
    "routes/admin/atolls.ts",
    "routes/admin/experiences.ts",
    "routes/admin/guesthouses.ts",
    "routes/admin/contact_info.ts",
    "controllers/atolls.ts",
    "controllers/experiences.ts",
    "controllers/guesthouses.ts",
    "controllers/contact_info.ts",
    "services/openai.ts",
    "services/storage/mockStorage.ts",
    "services/storage/objectAcl.ts",
    "services/storage/objectStorage.ts",
    "services/storage/storage.ts",
    "services/storage/storageWrapper.ts",
    "utils/vite.ts",
    "utils/db.ts",
    "types/express.d.ts",
    "../shared/schema.ts",
    "controllers/bookings.ts",
    "utils/supabase.ts"
  ],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}